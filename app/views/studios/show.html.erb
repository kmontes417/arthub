<div>
  <p><%= @studio.name %></p>
  <p><%= @studio.address %></p>
  <p><%= @studio.category %></p>
  <p><%= @studio.description %></p>
  <p>$<%= @studio.price %></p>
  <%= cl_image_tag @studio.photo, height: 300, width: 400, crop: :fill %>
</div>

<p> REVIEWS:</p>
<% @reviews.each do |review| %>
  <p> Description: <%= review.description %>, Rating: <%= review.rating %> </p>
<% end %>

<button> <%= link_to "go back", studios_path %></button>
<button> <%= link_to "book this studio", new_studio_booking_path(@studio) %></button>
