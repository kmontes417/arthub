<div class="form-banner">
          <%= simple_form_for :search, url: studios_path, method: :get  do |f| %>
          <%= f.input_field :category, collection: ["Recording Studio","Photography studio","Dance studio"], include_blank: false, include_hidden: false,
            label: false %>
          <%= f.input_field :city, collection: ["Milan"], include_blank: false, include_hidden: false,
            label: false %>
          <%= f.button :submit, "Search", class: 'search-btn' %>
          <% end %>
        </div>
  <div class="d-flex">
    <div class="cards-container-index">
      <% @studios.each do |studio| %>
      <%= link_to studio_path(studio) do %>
      <div class="card-trip">
        <img src="<%= studio.photo %>">
        <div class="card-trip-infos">
          <div>
            <h2><%= studio.name %></h2>
            <p><%= studio.description %></p>
          </div>
          <h2 class="card-trip-pricing">â‚¬ <%= studio.price %> /hr</h2>
        </div>
      </div>
        <% end %>
     <% end %>


    </div>

    <div
    id="map"
    style="width: 35vw; top: 110px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

</div>





